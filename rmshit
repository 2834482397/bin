files = %w[
  cache/ctrlp/hist/cache.txt
  cache/ctrlp/mru/cache.txt
  cmus/command-history
  cmus/search-history
  irb_history
  local/share/zathura/bookmarks
  mysql_history
  pry_history
  sdcv_history
  xsel.log
]

files.each do |f|
  path = "#{Dir.home}/.#{f}"
  if File.exist?(path)
    File.delete(path)
    puts "*** Removed #{path} ..."
  else
    puts ">>> #{path} not found"
  end
end
